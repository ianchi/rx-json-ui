{
  "name": "rx-json-ui",
  "version": "0.0.1",
  "description": "Framework to generate reactive UI/forms based on definitions made on json and json schema files",
  "author": {
    "name": "Adrian Panella",
    "email": "ianchi74@outlook.com"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "cd projects/rx-json-ui-cli && npm install",
    "build-lib": "ng build rx-json-ui --prod",
    "watch-lib": "ng build rx-json-ui --watch",
    "lint-lib": "ng lint rx-json-ui",
    "publish-lib": "npm run build-lib && npm run lint-lib && cd dist/rx-json-ui && npm publish",
    "build-doc": "rm -rf dist/doc && typedoc --ignoreCompilerErrors --exclude projects/rx-json-ui/src/lib/core/base/widget.directive.ts --tsconfig projects/rx-json-ui/tsconfig.json projects/rx-json-ui",
    "build-cli": "rm -rf  ./projects/rx-json-ui-cli/dist && cd projects/rx-json-ui-cli && rollup -c ",
    "watch-cli": "rm -rf  ./projects/rx-json-ui-cli/dist && cd projects/rx-json-ui-cli && rollup -w -c ",
    "publish-cli": "npm run build-cli && cd projects/rx-json-ui-cli && npm version patch && npm publish && git push --tags",
    "generate-schemas": "rm -rf dist/schema && node ./projects/rx-json-ui-cli/bin/cli.js g -p src/ -m src/app/app.module#AppModule dist/schema"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged --pattern \"*.{ts,scss,css,html}\""
    }
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/architect": "^0.1100.6",
    "@angular/animations": "^11.0.8",
    "@angular/cdk": "^11.0.3",
    "@angular/common": "^11.0.8",
    "@angular/compiler": "^11.0.8",
    "@angular/core": "^11.0.8",
    "@angular/forms": "^11.0.8",
    "@angular/material": "^11.0.3",
    "@angular/platform-browser": "^11.0.8",
    "@angular/router": "^11.0.8",
    "core-js": "^3.8.2",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-notice": "^0.9.10",
    "espression": "^1.8.4",
    "espression-jsonpath": "^0.1.6",
    "espression-rx": "^0.3.14",
    "rxjs": "^6.6.3",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "tslib": "^2.0.0",
    "zone.js": "^0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1100.6",
    "@angular-devkit/core": "^11.0.6",
    "@angular/cli": "^11.0.6",
    "@angular/compiler-cli": "^11.0.8",
    "@angular/language-service": "^11.0.8",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@types/node": "^12.19.12",
    "husky": "^4.3.7",
    "ng-packagr": "^11.0.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rollup": "^2.36.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.14",
    "typedoc-plugin-markdown": "^3.4.0",
    "typescript": "~4.0.5",
    "typescript-json-schema": "^0.47.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.6",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "@angular-eslint/builder": "1.0.0",
    "@angular-eslint/eslint-plugin": "1.0.0",
    "@angular-eslint/eslint-plugin-template": "1.0.0",
    "@angular-eslint/schematics": "1.0.0",
    "@angular-eslint/template-parser": "1.0.0",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0"
  }
}
