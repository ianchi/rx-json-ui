{
  "name": "rx-json-ui",
  "version": "0.0.1",
  "description": "Framework to generate reactive UI/forms based on definitions made on json and json schema files",
  "author": {
    "name": "Adrian Panella",
    "email": "ianchi74@outlook.com"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "cd projects/rx-json-ui-cli && npm install",
    "build-lib": "rm -rf dist/rx-json-ui/* && ng build rx-json-ui --prod && npm run bundle-styles",
    "watch-lib": "ng build rx-json-ui --watch",
    "lint-lib": "ng lint rx-json-ui",
    "publish-lib": "npm run build-lib && npm run lint-lib && cd dist/rx-json-ui && npm publish",
    "bundle-styles": "scss-bundle -p .",
    "build-doc": "rm -rf dist/doc && typedoc --ignoreCompilerErrors --exclude projects/rx-json-ui/src/lib/core/base/widget.directive.ts --tsconfig projects/rx-json-ui/tsconfig.json projects/rx-json-ui",
    "build-cli": "rm -rf  ./projects/rx-json-ui-cli/dist && cd projects/rx-json-ui-cli && rollup -c ",
    "watch-cli": "rm -rf  ./projects/rx-json-ui-cli/dist && cd projects/rx-json-ui-cli && rollup -w -c ",
    "publish-cli": "npm run build-cli && cd projects/rx-json-ui-cli && npm version patch && npm publish && git push --tags",
    "generate-schemas": "rm -rf dist/schema && node ./projects/rx-json-ui-cli/bin/cli.js g -p src/ -m src/app/app.module#AppModule -o WidgetsDef.json dist/schema"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged --pattern \"*.{ts,scss,css,html}\""
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^9.0.0",
    "@angular/cdk": "^9.0.0",
    "@angular/common": "^9.0.0",
    "@angular/compiler": "^9.0.0",
    "@angular/core": "^9.0.0",
    "@angular/forms": "^9.0.0",
    "@angular/material": "^9.0.0",
    "@angular/platform-browser": "^9.0.0",
    "@angular/platform-browser-dynamic": "^9.0.0",
    "@angular/router": "^9.0.0",
    "core-js": "^3.6.4",
    "espression": "^1.6.0",
    "espression-jsonpath": "^0.1.3",
    "espression-rx": "^0.3.6",
    "rxjs": "^6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.1",
    "@angular-devkit/build-ng-packagr": "~0.900.1",
    "@angular/cli": "^9.0.1",
    "@angular/compiler-cli": "^9.0.0",
    "@angular/language-service": "^9.0.0",
    "@rollup/plugin-alias": "^3.0.1",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/node": "^12.12.26",
    "codelyzer": "^5.2.1",
    "husky": "^4.2.1",
    "ng-packagr": "^9.0.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rollup": "^1.31.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "scss-bundle": "^3.0.2",
    "ts-node": "^8.6.2",
    "tsickle": "^0.38.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.1.0",
    "typedoc": "^0.16.9",
    "typedoc-plugin-markdown": "^2.2.16",
    "typescript": "~3.7.5",
    "typescript-json-schema": "^0.42.0"
  }
}
